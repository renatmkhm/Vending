@model VendingMachine

<h1>Admin Interface</h1>

<hr />

<form method="post" action="/AdminInterface/AddDrink">
    <h4>Add Drink</h4>
    <input type="text" name="Name" placeholder="Name" required />
    <input type="number" step="0.01" name="Price" placeholder="Price" required />
    <input type="number" name="Quantity" placeholder="Quantity" required />
    <button class="btn-primary" type="submit">Add</button>
</form>

<hr />

<h4>Delete Drink</h4>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var drink in Model.Drinks)
        {
            <form method="post" action="/AdminInterface/DeleteDrink">
                <input type="hidden" name="drinkId" value="@drink.Id" />
                <tr>
                    <td>@drink.Name</td>
                    <td>@drink.Price</td>
                    <td>@drink.Quantity</td>
                    <td>
                        <button class="btn-danger" type="submit">Delete</button>
                    </td>
                </tr>
            </form>
            
        }
    </tbody>
</table>

<hr />

<h4>Update Drink</h4>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var drink in Model.Drinks)
        {
            <form method="post" action="/AdminInterface/UpdateDrink">
                <input type="hidden" name="Id" value="@drink.Id" />
                <tr>
                    <td>
                        <input type="text" name="Name" value="@drink.Name" required />
                    </td>
                    <td>
                        <input type="number" step="0.01" name="Price" value="@drink.Price" required />
                    </td>
                    <td>
                        <input type="number" name="Quantity" value="@drink.Quantity" required />
                    </td>
                    <td>
                        <button class="btn-primary" type="submit">Update</button>
                    </td>
                </tr>
            </form>
        }
    </tbody>
</table>
